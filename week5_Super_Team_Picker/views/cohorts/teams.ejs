<%- include("../partials/header") %>

<div class="post-cards">
    <div class="card mb-4">
      <div class="card-body">
      <img src= "<%= cohort.logoUrl %>" alt="..." class="img-rounded" height="50">
        <h5 class="card-title">
    
    
        <%= cohort.name%>
    
        </h5>
       
        <p class="card-text">
        <%= cohort.members%>

        <hr>

        <h6>Method</h6>
        <form action="/show/<%= cohort.id %>" method="POST">
        <div>
          <input type="radio" id="teamCount"
           name="teamMaker" value = "teamCount" >
          <label for="teamCount">Team Count</label> <br>
      
          <input type="radio" id="memberCount"
           name="teamMaker" value= "memberCount">
          <label for="memberCount">Number Per Team</label> <br>
      

          <label for="quantity">Quantity</label> <br>
          <input type="number" name="quantity" class="input-group"> <br>
        </div>
        <div> <br>
          <button type="submit" class="btn btn-outline-primary btn-block p-4 ">Assign Teams</button>
        </div>
  
    </div>

<div class="ml-4">
        <table class="table">
        <thead>
        <tr>
        <th scope="col">Team # </th>
        <th scope="col">Members</th>
        </thead>
        <tbody>
      </tr>
    
    
        <%  for (let i = 0; i<= rowArray.length-1; i++ ) { %>
        <tr>
            <th scope="col">#<%=[i+1]%></th>
            <th scope="row"> <%=teamArray[i]%></th>
          </tr>
         
        
          <% } %>
    
        
      
      </tbody>
      </table>
      </div>    
    
    
    
    </div>
    
    <%- include("../partials/footer") %>